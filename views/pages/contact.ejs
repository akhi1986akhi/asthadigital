<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body style="background-color: #003147;">
    <header>
        <%- include('../partials/header'); %>
    </header>
    <main>
        <nav aria-label="breadcrumb" style="margin-bottom:0;padding-bottom:0">
            <ol class="breadcrumb">
              <li class="breadcrumb-item active" aria-current="page">Contact</li>
            </ol>
          </nav>
        <section class="contact" style="margin-bottom:0;padding-bottom:0">
            <div class="content">
                <h2>Contact Us</h2>
