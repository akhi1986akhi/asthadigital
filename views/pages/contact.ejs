                    </div>
                </div>
                <div class="contactForm" id="contact-frm">
                    <span id="msg-sus" class="msg-success"></span>
                    <!-- <form action="/contact" method="post"> -->
                        <form>
                        <h2>Send Message</h2>
                        <div class="inputBox">
                            <input type="text" name="name" required="required" class="inputfield">
                            <span>Full Name</span>
                        </div>
                        <div class="inputBox">
                            <input type="email" name="email" required="required" class="inputfield">
                            <span>E-mail</span>
                        </div>
                        <div class="inputBox">
                            <input type="tel" name="contact" required="required" class="inputfield">
                            <span>Contact</span>
                        </div>
                        <div class="inputBox">
                            <textarea required="required" name="message" class="inputfield"></textarea>
                            <span>Type your Message...</span>
                        </div>
                        <div class="inputBox">
                            <input type="submit" id="frm-sub-btn" name="" value="Submit">
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>
    <footer class="footer">
        <%- include('../partials/footer'); %>
    </footer>
    <!-- slide swiper javascript -->
    <script src="../../assets/js/swiper-bundle.min.js"></script>
    <script src="../../assets/js/javaScript.js"></script>

    <script src=
"https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js">
	</script>
	<script type="text/javascript">
	$(document).ready(function() {
		$('form').on('submit', function(event) {
			event.preventDefault();
            $("#contact-frm").addClass("show");
			// It returns a array of object
			let userinfo = $(this).serializeArray();
			let user = {};
			userinfo.forEach((value) => {
				
				// Dynamically create an object
				user[value.name] = value.value;
			});
			//  let url = "http://localhost:3000/contact";
             let url = "http://asthadigital.online/contact";
			$.ajax({
				method: "POST",
				url: url,
				data: user
			}).done(function() {
				
				// When the request is successful
				$('#msg-sus').text('Message Sent Successfully!');
                $("#contact-frm").removeClass("show");
                // $("#contact-frm").addClass("hide");
                $(".inputfield").val("");
                $("textarea").val("");
			}).fail(function(err, textstatus, error) {
				$('#msg-sus').text(textstatus + "message not sent");
			});
		});
	});

    

    $("body").click(function(){
        $("#msg-sus").text("");
    })
	</script>
</body>

</html>